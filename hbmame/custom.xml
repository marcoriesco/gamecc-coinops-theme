<theme>
    <formatVersion>7</formatVersion>

    <customView name="gamecc">

        <!-- Marquee do Game -->
        <image name="md_boxart">
            <origin>0 0</origin>
            <pos>0 0</pos>
            <size>1 1</size>
            <zIndex>7</zIndex>
        </image>

        <!-- Nome dos Games -->
        <text name="md_name">
            <origin>1 1</origin>
            <pos>0.915 0.9725</pos>
            <size>0.4 0</size>
            <fontPath>./_inc/fonts/Roboto-Medium.otf</fontPath>
            <fontSize>0.022</fontSize>
            <color>FFFFFF</color>
            <alignment>right</alignment>
            <forceUppercase>true</forceUppercase>
            <zIndex>20</zIndex>
        </text>

    </customView>

    <customView name="gamecc-simple">

        <!-- Arcade Background VÃ­deo -->
        <video name="md_video_background" extra="true">
            <origin>0 0</origin>
            <pos>0 0</pos>
            <size>1 1</size>
            <path>./assets/videos/arcade.mp4</path>
            <showSnapshotDelay>false</showSnapshotDelay>
            <delay>0</delay>
            <effect>none</effect>
            <zIndex>4</zIndex>
        </video>

        <!-- Video Game Preview -->
        <video name="md_video, screenbg">
            <pos>0.356 0.32</pos>
            <size>0.284 0.35</size>
        </video>

        <!-- Nome dos Games -->
        <text name="md_name">
            <origin>1 1</origin>
            <pos>0.999 0.9725</pos>
            <size>1 0</size>
            <fontPath>./_inc/fonts/Roboto-Medium.otf</fontPath>
            <fontSize>0.022</fontSize>
            <color>FFFFFF</color>
            <alignment>center</alignment>
            <forceUppercase>true</forceUppercase>
            <zIndex>20</zIndex>
        </text>

    </customView>

</theme>