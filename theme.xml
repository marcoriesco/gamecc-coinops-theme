<?xml version="1.0" encoding="UTF-8"?>

<theme defaultView="coinops">
    <formatVersion>7</formatVersion>

    <include subset="iconset" name="standard icons" displayName="${icondef}">./_inc/iconsets/default.xml</include>
	<include subset="iconset" name="SNES">./_inc/iconsets/snes.xml</include>
	<include subset="iconset" name="SNES ALT">./_inc/iconsets/snesalt.xml</include>
	<include subset="iconset" name="XBox">./_inc/iconsets/xbox.xml</include>
	<include subset="iconset" name="Default PSX">./_inc/iconsets/psx.xml</include>
	<include subset="iconset" name="ARCADE">./_inc/iconsets/arcade.xml</include>
	<include subset="iconset" name="PSX ALT">./_inc/iconsets/psx1.xml</include>
	<include subset="iconset" name="Xbox One">./_inc/iconsets/xboxone.xml</include>
	<include subset="iconset" name="Switch">./_inc/iconsets/switch.xml</include>

    <include subset="music" name="Mute" displayName="${silence}">./nosounds.xml</include>
    <include subset="music" name="On" displayName="${sysmusic}">./sounds.xml</include>
    <include subset="music" name="Off" displayName="${nomusic}"/>

    <feature supported="carousel">
        <view name="system">
            <sound name="bgsound"></sound>
        </view>
    </feature>

    <view name="menu">
        <menuText name="menutitle">
            <fontPath>./_inc/fonts/Roboto-Bold.ttf</fontPath>
            <fontSize>0.04</fontSize>
            <color>ffffff</color>
        </menuText>
        <menuText name="menufooter">
            <fontPath>./_inc/fonts/Roboto-Regular.ttf</fontPath>
            <fontSize>0.023</fontSize>
            <color>868686</color>
        </menuText>
        <menuText name="menutext">
            <fontPath>./_inc/fonts/Roboto-Regular.ttf</fontPath>
            <fontSize>0.029</fontSize>
            <color>868686</color>
            <separatorColor>191919</separatorColor>
            <selectorColor>9f005a</selectorColor>
            <selectorColorEnd>9f005a</selectorColorEnd>
            <selectedColor>FFFFFF</selectedColor>
            <selectorGradientType>horizontal</selectorGradientType>
        </menuText>
        <menuTextSmall name="menutextsmall">
            <fontPath>./_inc/fonts/Roboto-Medium.ttf</fontPath>
            <fontSize>0.020</fontSize>
            <color>FFFFFF</color>
        </menuTextSmall>
        <menuBackground name="menubg">
            <color>333333</color>
            <cornerSize>32 32</cornerSize>
            <path>./_inc/frame.png</path>
        </menuBackground>
        <menuIcons name="menuicons">
            <iconKodi>./_inc/icons/Kodi.png</iconKodi>
            <iconSystem>./_inc/icons/System.png</iconSystem>
            <iconUpdates>./_inc/icons/Updates.png</iconUpdates>
            <iconGames>./_inc/icons/Games.png</iconGames>
            <iconControllers>./_inc/icons/Controllers.png</iconControllers>
            <iconUI>./_inc/icons/UI.png</iconUI>
            <iconSound>./_inc/icons/Sound.png</iconSound>
            <iconNetwork>./_inc/icons/Network.png</iconNetwork>
            <iconScraper>./_inc/icons/Scraper.png</iconScraper>
            <iconAdvanced>./_inc/icons/Advanced.png</iconAdvanced>
            <iconQuit>./_inc/icons/Quit.png</iconQuit>
            <iconRestart>./_inc/icons/Restart.png</iconRestart>
            <iconShutdown>./_inc/icons/Shutdown.png</iconShutdown>
            <iconFastShutdown>./_inc/icons/Fastshutdown.png</iconFastShutdown>
            <iconRetroachievements>./_inc/icons/Contest.png</iconRetroachievements>
            <iconEmuelec>./_inc/icons/Emuelec.png</iconEmuelec>
        </menuIcons>
        <menuTextEdit name="menutextedit">
            <inactive>./_inc/textinput_text.png</inactive>
            <active>./_inc/textinput_text_active.png</active>
        </menuTextEdit>

        <helpsystem name="help">
            <fontPath>./_inc/fonts/Roboto-Regular.ttf</fontPath>
            <fontSize>0.022</fontSize>
            <pos>0.06 0.955</pos>
            <textColor>FFFFFF</textColor>
        </helpsystem>
    </view>

    <view name="detailed, basic">
        <textlist name="gamelist">
            <pos>0.61 0.17</pos>
            <size>0.34 0.59</size>
            <selectorColor>ffffff00</selectorColor>
            <selectedColor>f01e29</selectedColor>
            <primaryColor>ffffff</primaryColor>
            <secondaryColor>ffffff</secondaryColor>
            <fontPath>./_inc/fonts/polan.otf</fontPath>
            <fontSize>0.015</fontSize>
            <lineSpacing>1.975</lineSpacing>
            <forceUppercase>1</forceUppercase>
            <alignment>right</alignment>
            <zIndex>15</zIndex>
        </textlist>

        <image name="logo">
            <path>./assets/logos/${system.theme}.png</path>
            <pos>0.925 0.92</pos>
            <size>0.11 0</size>
        </image>

        <image name="background" extra="true">
            <origin>0 0</origin>
            <pos>0 -0.082</pos>
            <size>1 1</size>
            <path>./assets/coinops/default.png</path>
            <path>./assets/coinops/$system.png</path>
        </image>

        <image name="in-game-layer" extra="true">
            <origin>0 0</origin>
            <pos>0 0</pos>
            <size>1 1</size>
            <path>./assets/overbar.png</path>
        </image>

        <text name="md_lbl_releasedate, md_lbl_developer, md_lbl_genre, md_lbl_players">
            <color>FFFFFF</color>
            <fontPath>./_inc/fonts/texgyre.otf</fontPath>
            <fontSize>0.018</fontSize>
        </text>
        <text
            name="md_developer, md_publisher, md_genre, md_playcount, md_lastplayed, md_players, md_releasedate">
            <color>E8A500</color>
            <fontPath>./_inc/fonts/texgyre.otf</fontPath>
            <fontSize>0.018</fontSize>
        </text>
        <text name="md_description">
            <pos>0.045 0.85</pos>
            <size>0.458 0.113</size>
            <fontSize>0.020</fontSize>
            <color>FFFFFF</color>
            <alignment>left</alignment>
            <fontPath>./_inc/fonts/texgyre.otf</fontPath>
        </text>
        <rating name="md_rating">
            <pos>0.88 0.85</pos>
            <size>0.05 0.03</size>
            <filledPath>./_inc/images/star_filled.svg</filledPath>
            <unfilledPath>./_inc/images/star_empty.svg</unfilledPath>
        </rating>

        <text name="md_lbl_releasedate">
            <forceUppercase>1</forceUppercase>
            <pos>0.55 0.85</pos>
            <size>0.15 0.018</size>
        </text>
        <datetime name="md_releasedate">
            <pos>0.65 0.85</pos>
            <size>0.15 0.018</size>
            <alignment>left</alignment>
        </datetime>

        <text name="md_lbl_players">
            <forceUppercase>1</forceUppercase>
            <pos>0.55 0.885</pos>
            <size>0.15 0.018</size>
        </text>
        <text name="md_players">
            <pos>0.65 0.885</pos>
            <size>0.15 0.018</size>
        </text>

        <text name="md_lbl_genre">
            <forceUppercase>1</forceUppercase>
            <pos>0.55 0.915</pos>
            <size>0.15 0.018</size>
        </text>
        <text name="md_genre">
            <pos>0.65 0.915</pos>
            <size>0.17 0.018</size>
        </text>
        <text name="md_lbl_developer">
            <forceUppercase>1</forceUppercase>
            <pos>0.55 0.945</pos>
            <size>0.15 0.018</size>
        </text>
        <text name="md_developer">
            <pos>0.65 0.945</pos>
            <size>0.17 0.018</size>
        </text>

        <text
            name="md_lbl_lastplayed, md_lbl_playcount, md_lbl_favorite, md_playcount, md_lbl_rating, md_lbl_publisher, md_publisher, md_lastplayed">
            <pos>2 2</pos>
            <size>0 0</size>
            <fontSize>0.0</fontSize>
            <zIndex>0</zIndex>
        </text>

        <helpsystem name="help">
            <fontPath>./_inc/fonts/OpenSans-Semibold.ttf</fontPath>
            <fontSize>0.016</fontSize>
            <pos>0.025 0.985</pos>
            <textColor>FFFFFF</textColor>
        </helpsystem>

        <image name="md_image">
            <pos>0.106 0.22</pos>
            <size>0.365 0.48</size>
            <origin>0 0</origin>
            <zIndex>8</zIndex>
        </image>
        <video name="md_video">
            <pos>0.106 0.22</pos>
            <size>0.365 0.48</size>
            <origin>0 0</origin>
            <zIndex>8</zIndex>
        </video>
    </view>

    <view name="grid">
        <image name="logo">
            <path>./assets/logos/${system.theme}.png</path>
            <pos>0.08 0.04</pos>
            <maxSize>0.34 0.16</maxSize>
            <origin>0 0</origin>
            <zIndex>4</zIndex>
        </image>

        <helpsystem name="help">
            <fontPath>./_inc/fonts/OpenSans-Semibold.ttf</fontPath>
            <fontSize>0.017</fontSize>
            <pos>0.02 0.955</pos>
            <textColor>FFFFFF</textColor>
        </helpsystem>

        <image name="md_image">
            <tile>true</tile>
            <pos>0 0</pos>
            <origin>0 0</origin>
            <size>1 1</size>
            <zIndex>0</zIndex>
        </image>

        <image name="art" extra="true">
            <origin>0 0</origin>
            <pos>0 0</pos>
            <size>1 1</size>
            <path>./assets/arts/540/$system.jpg</path>
            <linearSmooth>true</linearSmooth>
            <zIndex>2</zIndex>
        </image>
        <image name="art2" extra="true">
            <origin>0 0</origin>
            <pos>0 0</pos>
            <size>1 1</size>
            <path>./assets/filter.png</path>
            <zIndex>5</zIndex>
        </image>
        <text
            name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount">
            <color>A0A0B000</color>
            <fontPath>./_inc/fonts/Roboto-Regular.ttf</fontPath>
        </text>
        <text
            name="md_developer, md_publisher, md_genre, md_players, md_playcount, md_description">
            <color>ffffff00</color>
            <fontPath>./_inc/fonts/Roboto-Regular.ttf</fontPath>
        </text>
        <datetime name="md_releasedate, md_lastplayed">
            <color>ffffff00</color>
            <fontPath>./_inc/fonts/Roboto-Regular.ttf</fontPath>
        </datetime>
        <rating name="md_rating">
            <pos>0.83 0.94</pos>
            <size>0.05 0.03</size>
            <color>FFFFFF</color>
            <unfilledColor>808080</unfilledColor>
            <!-- <fontPath>./_inc/fonts/Roboto-Regular.ttf</fontPath> -->
        </rating>
        <imagegrid name="gamegrid">
            <pos>0.025 0.16</pos>
            <size>0.950 0.774</size>
            <margin>0.005 0.010</margin>
            <padding>0.03 0.05 0.03 0.04</padding>
            <autoLayout>5 2</autoLayout>
            <autoLayoutSelectedZoom>1.12</autoLayoutSelectedZoom>
            <animateSelection>false</animateSelection>
        </imagegrid>
        <gridtile name="default">
            <backgroundColor>FFFFFF00</backgroundColor>
            <backgroundCornerSize>9 9</backgroundCornerSize>
            <selectionMode>image</selectionMode>
            <padding>5 5</padding>
            <imageColor>FFFFFFB0</imageColor>
        </gridtile>
        <gridtile name="selected">
            <backgroundCenterColor>0b0102</backgroundCenterColor>
            <backgroundEdgeColor>f60915</backgroundEdgeColor>
            <imageColor>FFFFFFFF</imageColor>
        </gridtile>
        <text name="gridtile">
            <color>D0D0D0</color>
            <!-- <backgroundColor>00000000</backgroundColor> -->
            <!-- <fontSize>0.022</fontSize> -->
            <!-- <alignment>center</alignment> -->
            <size>1 0.24</size>
        </text>
        <text name="gridtile_selected">
            <color>FFFFFF</color>
            <!-- <glowColor>00000016</glowColor> -->
            <!-- <glowSize>3</glowSize> -->
        </text>

        <text name="md_name">
            <fontPath>./_inc/fonts/Roboto-Regular.ttf</fontPath>
        </text>
    </view>

    <include name="system">./views/coinops.xml</include>
    <include name="gamecarousel">./gamecarousel.xml</include>

    <include name="coinops">./coinops-gamelist.xml</include>
    <include name="coinops-simple">./coinops-gamelist-simple.xml</include>

    <!-- Specific layout for systems -->
    <include>./${system.theme}/custom.xml</include>

</theme>