<?xml version="1.0" encoding="UTF-8"?>
<theme>
    <formatVersion>7</formatVersion>

    <view name="grid">

        <imagegrid name="gamegrid">
            <pos>0.025 0.181</pos>
            <size>0.950 0.752</size>
            <padding>0.04 0.03 0.04 0.03</padding>
            <margin>0.003 0.003</margin>
            <autoLayout>5 3</autoLayout>
            <autoLayoutSelectedZoom>1.1</autoLayoutSelectedZoom>
            <showVideoAtDelay>800</showVideoAtDelay>
            <imageSource>marquee</imageSource>            <!-- image / titleshot / marquee -->
            <animateSelection>true</animateSelection>            <!-- Anime le deplacement du fond -->
        </imagegrid>

        <gridtile name="default">
            <backgroundColor>33333300</backgroundColor>
            <backgroundCornerSize>0 0</backgroundCornerSize>
            <selectionMode>image</selectionMode>
            <padding>20 15</padding>
            <imageColor>FFFFFFB0</imageColor>
        </gridtile>

        <gridtile name="selected">
            <backgroundCenterColor>33333300</backgroundCenterColor>
            <backgroundEdgeColor>33333300</backgroundEdgeColor>
            <imageColor>FFFFFFFF</imageColor>
        </gridtile>

        <!-- Logo do Sistema -->
        <image name="logo">
            <origin>0 0</origin>
            <pos>0.04 0.905</pos>
            <scale>0.6</scale>
            <path>./_assets/logos/$system.png</path>
            <zIndex>20</zIndex>
        </image>

        <!-- Overlay Arts do sistema -->
        <image name="overlay" extra="true">
            <origin>0 0</origin>
            <pos>-0.1 0</pos>
            <size>1.3 1</size>
            <path>./_assets/overlay.png</path>
            <zIndex>16</zIndex>
        </image>
        <image name="overlay_right" extra="true">
            <origin>0 0</origin>
            <pos>0 0</pos>
            <size>1 1</size>
            <path>./_assets/overlay_right.png</path>
            <zIndex>13</zIndex>
        </image>

        <!-- Favorito -->
        <image name="md_favorite, no_favorite">
            <path>./_assets/favorite.png</path>
            <origin>0 0</origin>
            <pos>0 0.94</pos>
            <maxSize>0.05 0.05</maxSize>
            <zIndex>21</zIndex>
        </image>
        <image name="no_favorite" extra="true">
            <path>./_assets/no-favorite.png</path>
            <zIndex>20</zIndex>
        </image>

        <!-- Rating Classificação do Game -->
        <rating name="md_rating">
            <origin>1 1</origin>
            <pos>0.990 0.97</pos>
            <size>0.05 0.03</size>
            <color>FFFFFF</color>
            <unfilledPath>./_inc/images/star_empty.svg</unfilledPath>
            <unfilledColor>FFFFFF</unfilledColor>
            <horizontalAlignment>right</horizontalAlignment>
            <zIndex>40</zIndex>
        </rating>

        <!-- Cover do Game -->
        <image name="md_fanart, md_image, cover">
            <origin>1 1</origin>
            <pos>1 1</pos>
            <size>1 1</size>
            <zIndex>5</zIndex>
        </image>
        <image name="cover" extra="true">
            <path>./_assets/cover.jpg</path>
            <zIndex>5</zIndex>
        </image>

        <!-- Ajuda - botões para usar no Sistema -->
        <helpsystem name="help">
            <fontSize>0.001</fontSize>
            <pos>2 0.955</pos>
        </helpsystem>
    </view>

</theme>