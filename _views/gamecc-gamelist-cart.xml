<?xml version="1.0" encoding="UTF-8"?>
<theme>
    <formatVersion>7</formatVersion>

    <customView name="gamecc-cart" tinyScreen="false" displayName="gamecc CART" inherits="gamecarousel">
        <gamecarousel name="gamecarousel">
            <type>horizontal</type>
            <origin>0 1</origin>
            <pos>0 1.06</pos>
            <pos if="${screen.width} > 1920">0 1</pos>
            <size>1.6 0.5</size>
            <backgroundColor>333333</backgroundColor>
            <logoScale>1.7</logoScale>
            <logoSize>0.045 0.5</logoSize>
            <maxLogoCount>19</maxLogoCount>
            <logoRotation>0</logoRotation>
            <logoRotationOrigin>1 1</logoRotationOrigin>
            <logoAlignment>center</logoAlignment>
            <imageSource>thumbnail</imageSource>
            <zIndex>21</zIndex>
        </gamecarousel>

        <text name="gamecarouselLogoText">
            <color>FFFFFFFF</color>
            <glowColor>00000050</glowColor>
            <glowSize>3</glowSize>
            <glowOffset>3</glowOffset>
            <lineSpacing>1.0</lineSpacing>
            <fontPath>./_inc/fonts/LEMONMILK-Bold.otf</fontPath>
            <fontSize>0.040</fontSize>
        </text>

        <!-- Overlay -->
        <image name="overlay, overlay2" extra="true">
            <origin>0 0</origin>
            <pos>0 0</pos>
            <size>1 1</size>
            <path>./../_assets/overlay_down.png</path>
            <zIndex>15</zIndex>
        </image>
        <image name="overlay2" extra="true">
            <path>./../_assets/overlay_down.png</path>
        </image>

        <!-- Overlay -->
        <image name="background_fix" extra="true">
            <origin>0 0</origin>
            <pos>0 0</pos>
            <size>1 1</size>
            <path>./../_assets/default.jpg</path>
            <zIndex>1</zIndex>
        </image>

        <!-- Video Game Preview -->
        <video name="md_video">
            <origin>0 0</origin>
            <pos>0 0</pos>
            <size>1 1</size>
            <delay>2.5</delay>
            <effect>none</effect>
            <default>./_assets/videos/video_default.mp4</default>
            <snapshotSource>image</snapshotSource>
            <showSnapshotDelay>true</showSnapshotDelay>
            <zIndex>6</zIndex>
        </video>

        <!-- Informações do sistema - Jogando fora porq n pode apagar -->
        <image name="art, art2, art3" extra="true">
            <pos>9999 9999</pos>
        </image>
        <!-- não alterar -->

        <!-- Logo do Sistema -->
        <image name="logo">
            <origin>0 0</origin>
            <pos>0 0</pos>
            <scale>0.7</scale>
            <path>./_assets/logos/$system.png</path>
            <zIndex>20</zIndex>
        </image>

        <!-- Informações -->
        <!-- Game name -->
        <text name="md_name">
            <origin>1 1</origin>
            <!-- <pos>0.645 0.68</pos> -->
            <pos>0.95 0.09</pos>
            <size>0.8 0</size>
            <fontPath>./_inc/fonts/RobotoCondensed-Regular.ttf</fontPath>
            <fontSize>0.040</fontSize>
            <color>FFFFFFFF</color>
            <alignment>right</alignment>
            <zIndex>20</zIndex>
        </text>
        
        <!-- Rating Classificação do Game -->
        <rating name="md_rating">
            <origin>1 1</origin>
            <pos>0.953 0.12</pos>
            <size>0.05 0.03</size>
            <color>FFFFFF</color>
            <unfilledPath>./_inc/images/star_empty.svg</unfilledPath>
            <unfilledColor>FFFFFF</unfilledColor>
            <horizontalAlignment>right</horizontalAlignment>
            <zIndex>20</zIndex>
        </rating>

        <!-- é Favorito? -->
        <image name="md_favorite, no_favorite">
            <origin>1 1</origin>
            <pos>0.99 0.09</pos>
            <pos if="${screen.width} > 1920">0.982 0.09</pos>
            <path>./_assets/favorite.png</path>
            <size>0.032 </size>
            <size if="${screen.width} > 1920">0.025 </size>
            <zIndex>21</zIndex>
        </image>
        <image name="no_favorite" extra="true">
            <path>./_assets/no-favorite.png</path>
            <zIndex>20</zIndex>
        </image>

        <!-- Lancamento -->
        <datetime name="md_releasedate">
            <origin>1 1</origin>
            <pos>0.949 0.17</pos>
            <backgroundColor>${pinkColor}</backgroundColor>
            <fontPath>./_inc/fonts/RobotoCondensed-Regular.ttf</fontPath>
            <fontSize>0.020</fontSize>
            <color>FFFFFF</color>
            <format>%Y</format>
            <size>0.03</size>
            <alignment>center</alignment>
        </datetime>

        <!-- Genero -->
        <text name="md_genre">
            <origin>1 1</origin>
            <pos>0.91 0.17</pos>
            <backgroundColor>${pinkColor}</backgroundColor>
            <fontPath>./_inc/fonts/RobotoCondensed-Regular.ttf</fontPath>
            <fontSize>0.020</fontSize>
            <color>FFFFFF</color>
            <forceUppercase>true</forceUppercase>
            <size>0.12 0</size>
            <alignment>center</alignment>
        </text>

        <!-- Ajuda - botões para usar no Sistema -->
        <helpsystem name="help">
            <fontSize>0.001</fontSize>
            <pos>2 0.955</pos>
        </helpsystem>

    </customView>

</theme>