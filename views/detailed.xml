<?xml version="1.0" encoding="UTF-8"?>
<theme>
    <formatVersion>7</formatVersion>

    <view name="detailed">
        <textlist name="gamelist">
            <pos>0.61 0.17</pos>
            <size>0.34 0.59</size>
            <selectorColor>ffffff00</selectorColor>
            <selectedColor>9f005a</selectedColor>
            <primaryColor>ffffff</primaryColor>
            <secondaryColor>ffffff</secondaryColor>
            <fontPath>./_inc/fonts/LEMONMILK-Bold.otf</fontPath>
            <fontSize>0.020</fontSize>
            <lineSpacing>1.975</lineSpacing>
            <forceUppercase>1</forceUppercase>
            <alignment>right</alignment>
            <zIndex>15</zIndex>
        </textlist>

        <!-- Cover do Game -->
        <image name="md_fanart, md_image, cover">
            <origin>1 1</origin>
            <pos>1 1</pos>
            <size>0.5 1</size>
            <zIndex>5</zIndex>
        </image>
        <image name="cover" extra="true">
            <path>./assets/cover.jpg</path>
            <zIndex>5</zIndex>
        </image>

        <!-- Logo do Sistema -->
        <image name="logo">
            <origin>0 0</origin>
            <pos>0.04 0.905</pos>
            <scale>0.6</scale>
            <path>./assets/logos/$system.png</path>
            <zIndex>20</zIndex>
        </image>

        <image name="in-game-layer" extra="true">
            <origin>0 0</origin>
            <pos>0 0</pos>
            <size>1 1</size>
            <path>./assets/overbar.png</path>
        </image>

        <text name="md_lbl_releasedate, md_lbl_developer, md_lbl_genre, md_lbl_players">
            <color>FFFFFF</color>
            <fontPath>./_inc/fonts/texgyre.otf</fontPath>
            <fontSize>0.018</fontSize>
        </text>
        <text name="md_developer, md_publisher, md_genre, md_playcount, md_lastplayed, md_players, md_releasedate">
            <color>E8A500</color>
            <fontPath>./_inc/fonts/texgyre.otf</fontPath>
            <fontSize>0.018</fontSize>
        </text>
        <text name="md_description">
            <pos>0.045 0.85</pos>
            <size>0.458 0.113</size>
            <fontSize>0.020</fontSize>
            <color>FFFFFF</color>
            <alignment>left</alignment>
            <fontPath>./_inc/fonts/texgyre.otf</fontPath>
        </text>
        <rating name="md_rating">
            <pos>0.88 0.85</pos>
            <size>0.05 0.03</size>
            <filledPath>./_inc/images/star_filled.svg</filledPath>
            <unfilledPath>./_inc/images/star_empty.svg</unfilledPath>
        </rating>

        <text name="md_lbl_releasedate">
            <forceUppercase>1</forceUppercase>
            <pos>0.55 0.85</pos>
            <size>0.15 0.018</size>
        </text>
        <datetime name="md_releasedate">
            <pos>0.65 0.85</pos>
            <size>0.15 0.018</size>
            <alignment>left</alignment>
        </datetime>

        <text name="md_lbl_players">
            <forceUppercase>1</forceUppercase>
            <pos>0.55 0.885</pos>
            <size>0.15 0.018</size>
        </text>
        <text name="md_players">
            <pos>0.65 0.885</pos>
            <size>0.15 0.018</size>
        </text>

        <text name="md_lbl_genre">
            <forceUppercase>1</forceUppercase>
            <pos>0.55 0.915</pos>
            <size>0.15 0.018</size>
        </text>
        <text name="md_genre">
            <pos>0.65 0.915</pos>
            <size>0.17 0.018</size>
        </text>
        <text name="md_lbl_developer">
            <forceUppercase>1</forceUppercase>
            <pos>0.55 0.945</pos>
            <size>0.15 0.018</size>
        </text>
        <text name="md_developer">
            <pos>0.65 0.945</pos>
            <size>0.17 0.018</size>
        </text>

        <text name="md_lbl_lastplayed, md_lbl_playcount, md_lbl_favorite, md_playcount, md_lbl_rating, md_lbl_publisher, md_publisher, md_lastplayed">
            <pos>2 2</pos>
            <size>0 0</size>
            <fontSize>0.0</fontSize>
            <zIndex>0</zIndex>
        </text>

        <!-- Ajuda - botÃµes para usar no Sistema -->
        <helpsystem name="help">
            <origin>0.5 0.5</origin>
            <pos>0.5 0.960</pos>
            <fontPath>./../assets/Roboto-Medium.ttf</fontPath>
            <fontSize>0.020</fontSize>
            <textColor>FFFFFF</textColor>
        </helpsystem>

        <image name="md_image">
            <pos>0.106 0.22</pos>
            <size>0.365 0.48</size>
            <origin>0 0</origin>
            <zIndex>8</zIndex>
        </image>
        <video name="md_video">
            <pos>0.106 0.22</pos>
            <size>0.365 0.48</size>
            <origin>0 0</origin>
            <zIndex>8</zIndex>
        </video>

        <!-- Favorito -->
        <image name="md_favorite, no_favorite">
            <path>./assets/favorite.png</path>
            <origin>0 0</origin>
            <pos>0 0.94</pos>
            <maxSize>0.05 0.05</maxSize>
            <zIndex>21</zIndex>
        </image>
        <image name="no_favorite" extra="true">
            <path>./assets/no-favorite.png</path>
            <zIndex>20</zIndex>
        </image>
    </view>

</theme>
