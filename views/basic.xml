<?xml version="1.0" encoding="UTF-8"?>
<theme>
    <formatVersion>7</formatVersion>

    <view name="basic">
        <textlist name="gamelist">
            <pos>0.6 0.15</pos>
            <size>0.34 0.69</size>
            <selectorColor>ffffff00</selectorColor>
            <selectedColor>facc00</selectedColor>
            <primaryColor>ffffff</primaryColor>
            <secondaryColor>ffffff</secondaryColor>
            <glowColor>00000050</glowColor>
            <glowSize>3</glowSize>
            <glowOffset>3</glowOffset>
            <lineSpacing>1.5</lineSpacing>
            <fontPath>./_inc/fonts/LEMONMILK-Bold.otf</fontPath>
            <fontSize>0.032</fontSize>
            <forceUppercase>1</forceUppercase>
            <alignment>right</alignment>
            <zIndex>15</zIndex>
        </textlist>

        <!-- Overlay Arts do sistema -->
        <image name="overlay" extra="true">
            <origin>0 0</origin>
            <pos>-0.1 0</pos>
            <size>1.3 1</size>
            <path>./assets/overlay.png</path>
            <zIndex>16</zIndex>
        </image>
        <image name="overlay_right" extra="true">
            <origin>0 0</origin>
            <pos>0 0</pos>
            <size>1 1</size>
            <path>./assets/overlay_right.png</path>
            <zIndex>13</zIndex>
        </image>

        <!-- Logo do Sistema -->
        <image name="logo">
            <origin>1 0</origin>
            <pos>0.95 0.902</pos>
            <scale>0.6</scale>
            <path>./assets/logos/$system.png</path>
            <zIndex>20</zIndex>
        </image>

        <image name="art" extra="true">
            <origin>0 0</origin>
            <pos>0 0</pos>
            <size>1 1</size>
            <linearSmooth>true</linearSmooth>
            <path>./../assets/arts/$system.jpg</path>
            <path>./../assets/arts/$system.png</path>
        </image>

        <!-- Barra Fake -->
        <image name="overbar" extra="true">
            <origin>1 1</origin>
            <pos>0.995 0.75</pos>
            <size>0 0.5</size>
            <path>./../assets/bar.png</path>
            <zIndex>16</zIndex>
        </image>

        <!-- Ajuda - botÃµes para usar no Sistema -->
        <helpsystem name="help">
            <fontSize>0.001</fontSize>
            <pos>2 0.955</pos>
        </helpsystem>

    </view>

</theme>
