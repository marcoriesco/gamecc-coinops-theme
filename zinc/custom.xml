<theme>
    <formatVersion>7</formatVersion>

    <customView name="gamecc">

        <!-- Marquee do Game -->
        <image name="md_thumbnail">
            <origin>0 0</origin>
            <pos>0 0</pos>
            <size>1 1</size>
            <zIndex>7</zIndex>
        </image>

    </customView>

    <customView name="gamecc-simple">

        <!-- Arcade Background VÃ­deo -->
        <video name="md_video_background" extra="true">
            <origin>0 0</origin>
            <pos>0 0</pos>
            <size>1 1</size>
            <path>./assets/videos/arcade.mp4</path>
            <showSnapshotDelay>false</showSnapshotDelay>
            <delay>0</delay>
            <effect>none</effect>
            <zIndex>4</zIndex>
        </video>

        <!-- Video Game Preview -->
        <video name="md_video, md_video_default, screenbg">
            <pos>0.356 0.32</pos>
            <size>0.284 0.35</size>
        </video>

    </customView>

</theme>
